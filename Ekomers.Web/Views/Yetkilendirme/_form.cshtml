@model YetkilendirmeVM

<div class="form-group row"> 
    <div class="col-lg-12">
        <label asp-for="KategoriAd" class="control-label"></label>
        <select asp-for="KategoriID" class="form-control form-control-sm" asp-items="@ViewBag.KategoriListe"></select>      
    </div>    
</div>
<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="Ad" class="control-label"></label>
        <input asp-for="Ad" class="form-control form-control-sm" required />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-4">
        <label asp-for="PolicyName" class="control-label"></label>
        <input asp-for="PolicyName" class="form-control form-control-sm" required />
        <span asp-validation-for="PolicyName" class="text-danger"></span>
    </div>
    <div class="col-lg-4">
        <label asp-for="ClaimType" class="control-label"></label>
        <input asp-for="ClaimType" class="form-control form-control-sm" required />
        <span asp-validation-for="ClaimType" class="text-danger"></span>
    </div>
    <div class="col-lg-4">
        <label asp-for="ClaimName" class="control-label"></label>
        <input asp-for="ClaimName" class="form-control form-control-sm" required />
        <span asp-validation-for="ClaimName" class="text-danger"></span>
    </div>
</div>
 
 
 
<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="Aciklama" class="control-label"></label>
        <textarea asp-for="Aciklama" type="text" class="form-control form-control-sm" rows="2" required ></textarea>
        <span asp-validation-for="Aciklama" class="text-danger"></span>
    </div>
</div>
