@model List<Kullanici>
@{
	var user = (Kullanici)ViewBag.User;
}


 <form asp-controller="Admin" asp-action="Kopyala" method="post" name="_VeriEkle" id="_VeriEkle">
	<div class="modal-content">
		<div class="modal-header">
			<h5 class="modal-title">Yetki Kopyala</h5>
			<button type="button" class="close" data-dismiss="modal" aria-label="Kapat"><span aria-hidden="true">&times;</span></button>
		</div>
		<div class="modal-body">
			<div class="form-group row">
				<div class="col-lg-12">
					<label  class="control-label">Yetkileri kopyalanacak kişiyi seçiniz</label>
					<select class="kt_select2" data-live-search="true" data-size="5" required name="sourceUserId">
						@foreach (var item in Model)
						{
							<option value="@item.Id">@item.AdSoyad - @item.Email - @item.UserName</option>
						}

					</select>			 
				</div>		 
			</div>
			<div class="form-group row">
				<div class="col-lg-12">
					<label class="control-label">Yukarıdaki kullanıcının yetkileri aşağıdaki kişiye kopyalanacaktır.</label> 					 
				</div>
				<div class="col-lg-12"> 
					<label class="control-label"><b>Ad:</b> @user.AdSoyad</label>	<br/>				 
					<label class="control-label"><b>E-Posta:</b>@user.Email</label>	<br />
					<label class="control-label"><b>Kullanıcı Adı:</b>@user.UserName</label>
				</div>
			</div>
		</div> 
		<div class="modal-footer">
			<input type="hidden" value="@user.Id" name="targetUserId" id="targetUserId" />
			<button type="button" class="btn btn-danger" data-dismiss="modal">Kapat</button>
			<button type="submit" class="btn btn-success">Kaydet</button>
		</div>
	</div>
</form>
<script src="js/select2.js?v=7.0.5"></script>