@model RoleVM
@{
    ViewData["Title"] = "RoleCreate";
   // Layout = "~/Views/Shared/_Layout.cshtml";
   // Layout = "_LayoutMetronic1";
}
<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Rol Ekleme</h1>
    </div>
    <div class="card shadow mb-4">
        <div class="card-body">
            <form asp-action="RoleCreate" method="post">
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <button type="submit" class="btn btn-primary align-bottom position-absolute fixed-bottom">Ekle</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
