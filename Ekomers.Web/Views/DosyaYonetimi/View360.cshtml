
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>360 Derece Görüntüleme @ViewBag.filename</title>
    <style>
        body {
            margin: 0;
        }

        canvas {
            display: block;
        }
    </style>
</head>
<body>
    <!-- Three.js Kütüphanesi -->
<script src="~/leaflet/plugIn/view360/three.min.js"></script>

<!-- OrbitControls Kütüphanesi -->
<script src="~/leaflet/plugIn/view360/orbitcontrols.js"></script>

    <canvas id="viewer"></canvas>

    <script>
        // Scene ve Kamera kurulum
        const scene = new THREE.Scene();
        const camera = new THREE.PerspectiveCamera(40, window.innerWidth / window.innerHeight, 0.1, 1000);
        const renderer = new THREE.WebGLRenderer({ canvas: document.getElementById('viewer') });
        renderer.setSize(window.innerWidth, window.innerHeight);
        document.body.appendChild(renderer.domElement);

        // OrbitControls kurulum
        const controls = new THREE.OrbitControls(camera, renderer.domElement);
        controls.enableDamping = true; // Harekete pürüzsüzlük ekler
        controls.dampingFactor = 0.5; // Pürüzsüzlüğün miktarını ayarlar
        controls.enableZoom = true; // Yakınlaştırmayı devre dışı bırakır (isteğe bağlı)
        controls.minDistance = 0.001;  // Minimum yakınlaştırma mesafesi
        controls.maxDistance = 500; // Maksimum uzaklaştırma mesafesi
        controls.enablePan = false; // Yan kaydırmayı devre dışı bırak(isteğe bağlı)
        controls.zoomSpeed = 2;  // Zoom hızını artır

        // Panorama görüntüsü için küresel doku ekleme
        const geometry = new THREE.SphereGeometry(500, 60, 40);
        geometry.scale(-1, 1, 1); // Kameranın içine bakması için küreyi ters çevir
         const texture = new THREE.TextureLoader().load('/@ViewBag.filepath/@ViewBag.filename');
        const material = new THREE.MeshBasicMaterial({ map: texture });
        const sphere = new THREE.Mesh(geometry, material);
        scene.add(sphere);

        // Kamera başlangıç konumu
        camera.position.set(0, 0, 200);

        // Render fonksiyonu
        function animate() {
            requestAnimationFrame(animate);
            controls.update(); // Kontrolleri her frame'de güncelle
            renderer.render(scene, camera);
        }

        animate();

    </script>
</body>
</html>



 