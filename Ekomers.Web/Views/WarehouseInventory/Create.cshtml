@model WarehouseInventory

<h2>Yeni Depo Mevcudu Ekle</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label>Depo</label>
        <select asp-for="WarehouseId" class="form-select"
                asp-items="@(new SelectList(ViewBag.Warehouses, "Id", "Name"))">
            <option value="">Seçiniz...</option>
        </select>
    </div>

    <div class="mb-3">
        <label>Ürün</label>
        <select asp-for="ProductId" class="form-select"
                asp-items="@(new SelectList(ViewBag.Products, "Id", "Name"))">
            <option value="">Seçiniz...</option>
        </select>
    </div>

    <div class="mb-3">
        <label>Sistem Miktarı</label>
        <input asp-for="SystemQuantity" class="form-control" type="number" step="0.01" />
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

