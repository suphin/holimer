                </div>
                <div class="col-auto text-muted small">
                    @if (!string.IsNullOrWhiteSpace(m.CreateUserName))
                    {
                        <text>@m.CreateUserName — </text>
                    }
                    @m.CreateDate?.ToString("dd.MM.yyyy HH:mm")
                </div>
            </div>
        </div>
    </div>
}

@if (Model.TotalPages > 1)
{ 
    await Html.RenderPartialAsync("~/Views/Shared/SitePartial/_Pager.cshtml", new PagerModel { PageIndex = Model.PageIndex, PageSize = Model.PageSize, TotalCount = Model.TotalCount });
}

 