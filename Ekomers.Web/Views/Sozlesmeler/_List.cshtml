                        await Html.RenderPartialAsync("~/Views/Shared/SitePartial/_ButtonGroup.cshtml",
                        new AuthorizeCrudVM { ID = m.ID, DosyaEkle = true, HaritaEkle = false, ModulID = (int)ModulEnum.Sozlesmeler, Controller = "Sozlesmeler" });
                    }
                </div>
            </div>
            <!-- 2. satır: not  |  ekleyen ve tarih -->
            <div class="row mt-2">
                  <div class="col">
                    <div class="small bold">Başlık: @(!string.IsNullOrWhiteSpace(m.Baslik) ? m.Baslik : "—")</div>
                </div>
                <div class="col">
                    <div class="small bold">Sözleşme Konusu: @(!string.IsNullOrWhiteSpace(m.Konu) ? m.Konu : "—")</div>
                </div> 
            </div>
           
         

            <!-- 4. satır: not  |  ekleyen ve tarih -->
            <div class="row mt-2">
                <div class="col">
                    <div class="small">Açıklama : @(!string.IsNullOrWhiteSpace(m.Aciklama) ? m.Aciklama : "—")</div>
                </div>
                <div class="col-auto text-muted small">
                    @if (!string.IsNullOrWhiteSpace(m.CreateUserName))
                    {
                        <text>@m.CreateUserName — </text>
                    }
                    @m.CreateDate?.ToString("dd.MM.yyyy HH:mm")
                </div>
            </div>
        </div>
