@model IEnumerable<StockCount>
@{
    ViewData["Title"] = "Depo Sayım Raporu";
}

<h2>Depo Sayım Raporu</h2>

<form method="get" asp-action="Report" class="mb-3 d-flex align-items-center">
    <label class="me-2">Tarih Seç:</label>
    <input type="date" name="date" value="@ViewBag.SelectedDate" class="form-control" style="width: 200px;" />
    <button type="submit" class="btn btn-primary ms-2">Filtrele</button>
</form>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Tarih</th>
            <th>Depo</th>
            <th>Ürün</th>
            <th>Sistem Miktarı</th>
            <th>Sayım Miktarı</th>
            <th>Fark</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var fark = item.CountedQuantity - item.SystemQuantity;
            <tr class="@(fark != 0 ? "table-warning" : "")">
                <td>@item.CountDate.ToShortDateString()</td>
                <td>@item.Warehouse.Name</td>
                <td>@item.Product.Name</td>
                <td>@item.SystemQuantity</td>
                <td>@item.CountedQuantity</td>
                <td>@fark</td>
            </tr>
        }
    </tbody>
</table>
