@if (Model.TotalPages > 1)
{
    <nav aria-label="Sayfalama">
        <ul class="pagination">
            <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
                <a class="page-link ajax-page"
                   href="@Url.Action("IliskiMusteri","Crm", new { page = Model.PageIndex - 1, pageSize = Model.PageSize })">Önceki</a>
            </li>

            @{
                var start = Math.Max(1, Model.PageIndex - 2);
                var end = Math.Min(Model.TotalPages, Model.PageIndex + 2);
                for (var i = start; i <= end; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link ajax-page"
                           href="@Url.Action("IliskiMusteri", "Crm", new { page = i, pageSize = Model.PageSize })">@i</a>
                    </li>
                }
            }

            <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
                <a class="page-link ajax-page"
                   href="@Url.Action("IliskiMusteri", "Crm", new { page = Model.PageIndex + 1, pageSize = Model.PageSize })">Sonraki</a>
            </li>
        </ul>
        <span class="ms-2 small text-muted">
            Toplam: @Model.TotalCount kayıt — Sayfa @Model.PageIndex/@Model.TotalPages
        </span>
    </nav>
}

<script type="text/javascript">

    var $container = $('#CrmGovde');
    var withPartial = url => url + (url.includes('?') ? '&' : '?') + 'partial=true';

    function loadPartial(url) {
      $container.addClass('opacity-50 position-relative');
      $container.append('<div id="spinner" class="position-absolute top-50 start-50 translate-middle">Yükleniyor…</div>');
      return $.get(withPartial(url))
        .done(html => { $container.html(html); })
        .always(() => { $('#spinner').remove(); $container.removeClass('opacity-50 position-relative'); });
    }

    $(document).on('click', 'a.ajax-page', function (e) {
      e.preventDefault();
      const href = this.href;
      loadPartial(href).then(() => history.pushState(null, '', href));
    });


    $(document).on('change', '#pageSizeSelect', function () {
      const size = $(this).val();
      const url = new URL(window.location.href);
      url.searchParams.set('page', 1);
      url.searchParams.set('pageSize', size);
      loadPartial(url.toString()).then(() => history.pushState(null, '', url.toString()));
    });


    window.addEventListener('popstate', function () {
      loadPartial(window.location.href);
    });
</script>
