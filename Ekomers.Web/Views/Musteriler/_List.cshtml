        <!-- Sağ taraftaki içerik: iki alt row -->
        <div class="col">
            <!-- 1. satır: Adsoyad, şehir ve tel  |  müşteri tip durumu -->
            <div class="row align-items-center">
                <div class="col">
                    <span class="text-muted small">
                        Kayıt No: @m.ID
                    </span>
                    <div class="fw-semibold">@m.AdSoyad</div>
                    <div class="text-muted">
                        @m.Sehir
                        @if (!string.IsNullOrWhiteSpace(m.Telefon))
                        {
                            <text> • <a href="tel:@m.Telefon">@m.Telefon</a></text>
                        }
                    </div>
                </div>
                <div class="col-auto">
                    <span class="badge">
                        @m.TipAd                     
                    </span>
                    @{
                        await Html.RenderPartialAsync("~/Views/Shared/SitePartial/_ButtonGroup.cshtml",
                        new AuthorizeCrudVM { ID = m.ID, DosyaEkle = true, HaritaEkle = true, ModulID = (int)ModulEnum.Musteriler, Controller = "Musteriler" });
                    }
                </div>
            </div>
            <!-- 2. satır: not  |  ekleyen ve tarih -->
            <div class="row mt-2">
                <div class="col">
                    <div class="small">Adres: @(!string.IsNullOrWhiteSpace(m.Adres) ? m.Adres : "—")</div>
                </div>
            </div>
            @if (m.TipID==(int)EnumMusteriTip.Musteri)
            {
          
            <!-- 3. satır: not  |  ekleyen ve tarih -->
            <div class="row mt-2">
                    <div class="col">
                        <div class="small">Bizim Hesap No: @(!string.IsNullOrWhiteSpace(m.BizimHesapNo) ? m.BizimHesapNo : "—")</div>
                    </div>
                    <div class="col">
                        <div class="small">Cari Bakiye :   @m.CariBakiyeTl </div>
                </div>
                    <div class="col">
                        <div class="small">Para Birimi : @(!string.IsNullOrWhiteSpace(m.ParaBirimi) ? m.ParaBirimi : "—")</div>
                    </div>
            </div>
              
            }
         

            <!-- 4. satır: not  |  ekleyen ve tarih -->
            <div class="row mt-2">
                <div class="col">
                    <div class="small">@(!string.IsNullOrWhiteSpace(m.Not) ? m.Not : "—")</div>
                </div>
                <div class="col-auto text-muted small">
                    @if (!string.IsNullOrWhiteSpace(m.KayitEden))
                    {
                        <text>@m.KayitEden — </text>
                    }
                    @m.KayitTarihi?.ToString("dd.MM.yyyy HH:mm")
                </div>
            </div>
        </div>
    </div>
}
@* <script src="js/select2.js?v=7.0.5"></script> *@
@if (Model.TotalPages > 1)
{
    await Html.RenderPartialAsync("~/Views/Shared/SitePartial/_Pager.cshtml", new PagerModel { PageIndex = Model.PageIndex, PageSize = Model.PageSize, TotalCount = Model.TotalCount });
}

 