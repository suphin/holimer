@model UretimVM;
@{
    ViewData["Title"] = "Üretim Planlama Takvimi";
}
@section CSSection {
    <link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
    <link href="~/assets1/plugins/custom/fullcalendar/fullcalendar.bundle.css?v=7.0.5" rel="stylesheet" type="text/css" />
}
<div class="card card-custom">
    <div class="card-header">
        <div class="card-title">
            <h3 class="card-label">
                Üretim Planlama Takvimi
            </h3>
        </div>
        <div class="card-toolbar">
            @*   <a href="#" class="btn btn-light-primary font-weight-bold">
                <i class="ki ki-plus "></i> Add Event
            </a> *@
        </div>
    </div>
    <div class="card-body">
        <div id="kt_calendar"></div>
    </div>
</div>


@section JSSection {
   
    @{
        var takvimVerileri = "";
    }
    @foreach (UretimVM item in Model.UretimVMListe)
    {
        takvimVerileri = takvimVerileri + "{" +
    "title: '" + item.UrunAd.Replace("'", "\\'") + "'," +
    "start: '" + item.SiparisTarihi.ToString("yyyy-MM-dd HH:mm:ss") + "'," + // Randevu tarihi saat kısmı formatlanarak start alanına ekleniyor.
    "description: '" + item.Not.Replace("'", "\\'") + "'," + // Açıklama olarak ad soyad ekleniyor.
    "end: '" + item.SiparisTarihi.ToString("yyyy-MM-dd") + "'," + // end alanına tarih kısmı ekleniyor
    "className: 'fc-event-danger fc-event-solid-warning'" +
    "},";
    }

    <script>
        var KTCalendarBasic = function () {

            return {
                //main function to initiate the module
                init: function () {
                    var todayDate = moment().startOf('day');
                    var YM = todayDate.format('YYYY-MM');
                    var YESTERDAY = todayDate.clone().subtract(1, 'day').format('YYYY-MM-DD');
                    var TODAY = todayDate.format('YYYY-MM-DD');
                    var TOMORROW = todayDate.clone().add(1, 'day').format('YYYY-MM-DD');

                    var calendarEl = document.getElementById('kt_calendar');
                    var calendar = new FullCalendar.Calendar(calendarEl, {
                        plugins: ['bootstrap', 'interaction', 'dayGrid', 'timeGrid', 'list'],
                        themeSystem: 'bootstrap',

                        isRTL: KTUtil.isRTL(),

                        header: {
                            left: 'prev,next today',
                            center: 'title',
                            right: 'dayGridMonth,timeGridWeek,timeGridDay'
                        },

                        height: 600,
                        contentHeight: 650,
                        aspectRatio: 3,  // see: https://fullcalendar.io/docs/aspectRatio

                        nowIndicator: true,
                        now: TODAY + 'T09:25:00', // just for demo

                        views: {
                            dayGridMonth: { buttonText: 'Ay' }, // Türkçeye çevirdik
                            timeGridWeek: { buttonText: 'Hafta' }, // Türkçeye çevirdik
                            timeGridDay: { buttonText: 'Gün' } // Türkçeye çevirdik
                        },

                        locale: 'tr', // Türkçe dil ayarını ekledik
                        defaultView: 'dayGridMonth',
                        defaultDate: TODAY,
                         firstDay: 1,
                        editable: true,
                        eventLimit: false, // allow "more" link when too many events
                        navLinks: true,
                        events: [


                            @Html.Raw(takvimVerileri)

                        ],

                        eventRender: function (info) {
                            var element = $(info.el);

                            if (info.event.extendedProps && info.event.extendedProps.description) {
                                if (element.hasClass('fc-day-grid-event')) {
                                    element.data('content', info.event.extendedProps.description);
                                    element.data('placement', 'top');
                                    KTApp.initPopover(element);
                                } else if (element.hasClass('fc-time-grid-event')) {
                                    element.find('.fc-title').append('<div class="fc-description">' + info.event.extendedProps.description + '</div>');
                                } else if (element.find('.fc-list-item-title').length !== 0) {
                                    element.find('.fc-list-item-title').append('<div class="fc-description">' + info.event.extendedProps.description + '</div>');
                                }
                            }
                        }
                    });

                    calendar.render();
                }
            };
        }();

        jQuery(document).ready(function () {
            KTCalendarBasic.init();
        });

    </script>

    <!--begin::Page Vendors(used by this page)-->
    <script src="~/assets1/plugins/custom/fullcalendar/fullcalendar.bundle.js?v=7.0.5"></script>
    <!--end::Page Vendors-->
}
