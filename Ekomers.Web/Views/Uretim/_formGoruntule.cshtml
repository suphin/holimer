@model UretimVM
<style>
    .control-label {
        font-weight:bold !important;
        margin-right:10px;
        margin-bottom: 15px;
    }
</style>
 
 
 
<div class="form-group row">

    <div class="col-lg-6">
        <label asp-for="UrunAd" class="control-label"></label>: @Model.UrunAd
    </div>
    <div class="col-lg-3">
        <label asp-for="UrunKod" class="control-label"></label>: @Model.UrunKod
    </div>
    <div class="col-lg-3">
      
    </div>

</div>
<div class="form-group row">
    <div class="col-lg-3">
        <label asp-for="SiparisTarihi" class="control-label"></label> :@Model.SiparisTarihi.ToString("dd.MM.yyyy")
    </div>
    <div class="col-lg-3">
        <label asp-for="PartiNo" class="control-label"></label> :@Model.PartiNo
    </div>
    <div class="col-lg-3">
        <label asp-for="TerminSuresi" class="control-label"></label> :@Model.TerminSuresi
    </div>
    <div class="col-lg-3">
        <label asp-for="Uretici" class="control-label"></label> :@Model.Uretici
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-4">
        <label class="control-label">
            Kayıp Kaynaklı Parasal Değer
        </label> : @String.Format("{0:n2}", Model.ParasalDeger)  TL
    </div>
    <div class="col-lg-4">
        <label class="control-label">
            Kayıp Fire Miktarı
        </label> : @Model.KayipFireMiktar  
    </div>
    <div class="col-lg-4">
        <label class="control-label">
            Kayıp/Fire (Hammadde)
        </label>: @Model.KayipFireOran  
    </div>
</div>
 
<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="Not" class="control-label"></label>:@Model.Not
    </div>
</div> 
<div class="form-group row">
    <div class="col-lg-12">
        <div class="small">
            Kayıt Oluşturan: @Model.CreateUserName
            Oluşturma Tarihi:@Model.CreateDate?.ToString("dd.MM.yyyy HH:mm")
        </div>
    </div>
</div>
@if (Model.IsDelete)
{
    <div class="form-group row">
        <div class="col-lg-12">
            <div class="small">
                Kayıt Silen: @Model.DeleteUserName
                Silme Tarihi:@Model.DeleteDate?.ToString("dd.MM.yyyy HH:mm")
            </div>
        </div>
    </div>
}
