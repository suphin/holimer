@section JSSection
{
        <!--begin::Page Vendors(used by this page)-->
    <script src="~/assets1/plugins/custom/jstree/jstree.bundle.js?v=7.0.5"></script>
    <!--end::Page Vendors-->
    <script>
        function kategoriAra() {
            var query = document.getElementById('KategoriAra').value;

            // AJAX isteği ile backend'e arama talebi gönder
            $.ajax({
                url: '/Stok/KategoriArama',  // Backend API endpoint
                type: 'GET',
                data: { arama: query },
                success: function (result) {
                    // TreeView kısmını güncelle
                    $('#kt_tree_1').empty();
                    $('#kt_tree_1').html(result);
                },
                error: function (xhr, status, error) {
                    console.log("Arama işlemi başarısız: ", xhr.responseText);
                    console.log("Arama işlemi başarısız: ", error);
                }
            });
        }
    </script>

    <script>
        $(document).ready(function () {
            $('#GirisEkleForm').on('submit', function (e) {
                e.preventDefault(); // Sayfanın yenilenmesini engelle

                var form = $(this);
                var actionUrl = form.attr('action');
                var formData = form.serialize(); // Form verilerini al

                $.ajax({
                    type: 'POST',
                    url: actionUrl,
                    data: formData,
                    success: function (response) {
                        // Başarılı işlem sonrası yapılacaklar
                       // alert('Veri başarıyla eklendi.');
                        $('#DivAltKategori').html(response);
                        // Modalı kapatmak veya sayfayı yenilemek isteyebilirsiniz
                        $('#DetaylarDiv').modal('hide');
                        //location.reload(); // Sayfayı yenile
                    },
                    error: function (xhr, status, error) {
                        // Hata işlemleri
                        alert('Bir hata oluştu: ' + xhr.responseText);
                    }
                });
            });
        });
    </script>
