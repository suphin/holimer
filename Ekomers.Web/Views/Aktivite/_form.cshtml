<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="Not" class="control-label"></label>
        <textarea asp-for="Not" type="text" class="form-control form-control-sm" rows="4" required></textarea>
        <span asp-validation-for="Not" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-12">
        <div class="small">
            Kayıt Oluşturan: @Model.CreateUserName
            Oluşturma Tarihi:@Model.CreateDate?.ToString("dd.MM.yyyy HH:mm")
        </div>
    </div>
</div>
@if (Model.IsDelete)
{
    <div class="form-group row">
        <div class="col-lg-12">
            <div class="small">
                Kayıt Silen: @Model.DeleteUserName
                Silme Tarihi:@Model.DeleteDate?.ToString("dd.MM.yyyy HH:mm")
            </div>
        </div>
    </div>
}
@if (Model.UpdateUserID!=null)
{
    <div class="form-group row">
        <div class="col-lg-12">
            <div class="small">
                Kayıt Güncelleyen: @Model.UpdateUserName
                Güncelleme Tarihi:@Model.UpdateDate?.ToString("dd.MM.yyyy HH:mm")
            </div>
        </div>
    </div>
}
<script src="js/select2.js?v=7.0.5"></script>

 
 