@model AktiviteVM

<div class="form-group row">
    <div class="col-6">
        <label class="control-label">Yapılacak </label>
        <input asp-for="IsDone" type="radio" value="false" name="IsDone" />
    </div>
    <div class="col-6">
        <label class="control-label">Yapıldı </label>
        <input asp-for="IsDone" type="radio" value="true" name="IsDone" />
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-6">
        <label asp-for="TurAd" class="control-label"></label>
        <select asp-for="TurID"  class="kt_select2" data-live-search="true" data-size="5" asp-items="@ViewBag.AktiviteTurListe"></select>
        <span asp-validation-for="TurAd" class="text-danger"></span>
    </div>
    <div class="col-lg-6">
        <label asp-for="TarihSaat" class="control-label"></label>
        <input asp-for="TarihSaat" type="datetime-local" class="form-control form-control-sm" required />
        <span asp-validation-for="TarihSaat" class="text-danger"></span>
    </div>
  
</div>
<div class="form-group row">
    <div class="col-lg-6">
    @{
        await Html.RenderPartialAsync("~/Views/Musteriler/_selectList.cshtml",Model?.Musteri??new Musteriler());
    }
    </div>

