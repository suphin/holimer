@model MalzemelerVM
<style>
    .control-label {
        font-weight: bold !important;
        margin-right: 10px;
        margin-bottom: 15px;
    }
</style>


<div class="form-group row">
    <div class="col-lg-12">

        <label asp-for="GrupID" class="control-label text-info" style="font-weight:bold">Geçerli Grup : @(Model.Grup + ">>" + Model.AltGrup)</label>

        <input class="form-control form-control-sm" value="@(Model.Grup + ">>" + Model.AltGrup)" id="Grup" readonly />

    </div>
</div>

<div class="form-group row">
    <div class="col-lg-3">
        <label asp-for="BarkodNo" class="control-label"></label>
        <input asp-for="BarkodNo" class="form-control form-control-sm" readonly />
    </div>
    <div class="col-lg-3">
        <label asp-for="Kod" class="control-label"></label>
        <input asp-for="Kod" class="form-control form-control-sm" readonly />
    </div>
    <div class="col-lg-6">
        <label asp-for="Ad" class="control-label"></label>
        <input asp-for="Ad" class="form-control form-control-sm" readonly />
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-3">
        <label asp-for="Marka" class="control-label"></label>
        <input asp-for="Marka" class="form-control form-control-sm" readonly />
    </div>
    <div class="col-lg-3">
        <label asp-for="Model" class="control-label"></label>
        <input asp-for="Model" class="form-control form-control-sm" readonly />
    </div>
    <div class="col-lg-3">
        <label asp-for="Kdv" class="control-label"></label>
        <input asp-for="Kdv" class="form-control form-control-sm" readonly />
    </div>
    <div class="col-lg-3">
        <label asp-for="KritikMiktar" class="control-label"></label>
        <input asp-for="KritikMiktar" class="form-control form-control-sm" readonly />
    </div>
</div>
<div class="form-group row">
    <div class="col-lg-6">
        <label asp-for="TipID" class="control-label"></label>
        <input asp-for="TipID" class="form-control form-control-sm" readonly />
    </div>
    <div class="col-lg-6">
        <label asp-for="BirimID" class="control-label"></label>
        <input asp-for="BirimID" class="form-control form-control-sm" readonly />
    </div>

</div>




<div class="form-group row">
    <div class="col-lg-12">
        <label asp-for="Aciklama" class="control-label"></label>
        <textarea asp-for="Aciklama" type="text" class="form-control form-control-sm" rows="4" readonly></textarea>
    </div>
</div>




<script src="js/select2.js?v=7.0.5"></script>



<div class="form-group row">
    <div class="col-lg-12">
        <div class="small">
            Kayıt Oluşturan: @Model.CreateUserName
            Oluşturma Tarihi:@Model.CreateDate?.ToString("dd.MM.yyyy HH:mm")
        </div>
    </div>
</div>
@if (Model.IsDelete)
{
    <div class="form-group row">
        <div class="col-lg-12">
            <div class="small">
                Kayıt Silen: @Model.DeleteUserName
                Silme Tarihi:@Model.DeleteDate?.ToString("dd.MM.yyyy HH:mm")
            </div>
        </div>
    </div>
}
<script src="js/select2.js?v=7.0.5"></script>