@model MalzemelerVM
 <div class="row">
    <div class="col-lg-4" style="height:500px;overflow:auto">
        <div id="kt_tree_1" class="tree-demo">
            @await Html.PartialAsync("_KategoriPartial", Model.KategoriTree)
        </div>
     </div>
     <div class="col-lg-8">
        <div class="form-group row">
            <div class="col-lg-12">
                @{
                   // await Html.RenderPartialAsync("_gruplar", Model);
                }
                <label asp-for="GrupID" class="control-label text-info" style="font-weight:bold">Geçerli Grup : @(Model.Grup + ">>" + Model.AltGrup)</label>
                <input name="GrupID" id="GrupID" class="form-control form-control-sm" type="hidden" value="@Model.AltGrupID" />
                <input class="form-control form-control-sm" value="@(Model.Grup + ">>" + Model.AltGrup)" id="Grup" />
                <span asp-validation-for="GrupID" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-lg-3">
                <label asp-for="BarkodNo" class="control-label"></label>
                <input asp-for="BarkodNo" class="form-control form-control-sm"  />
                <span asp-validation-for="BarkodNo" class="text-danger"></span>
            </div>
            <div class="col-lg-3">
                <label asp-for="Kod" class="control-label"></label>
                <input asp-for="Kod" class="form-control form-control-sm" required />
                <span asp-validation-for="Kod" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" class="form-control form-control-sm" required />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-3">
                <label asp-for="Marka" class="control-label"></label>
                <input asp-for="Marka" class="form-control form-control-sm"  />
                <span asp-validation-for="Marka" class="text-danger"></span>
            </div>
            <div class="col-lg-3">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control form-control-sm"  />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="col-lg-3">
                <label asp-for="Kdv" class="control-label"></label>
                <input asp-for="Kdv" class="form-control form-control-sm" />
                <span asp-validation-for="Kdv" class="text-danger"></span>
            </div>
            <div class="col-lg-3">
                <label asp-for="KritikMiktar" class="control-label"></label>
                <input asp-for="KritikMiktar" class="form-control form-control-sm" />
                <span asp-validation-for="KritikMiktar" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-6">
                <label asp-for="TipID" class="control-label"></label>
                <select asp-for="TipID" class="form-control form-control-sm" asp-items="@ViewBag.MalzemeTipiListe" id="MalzemeTipiListe"></select>

                <span asp-validation-for="TipID" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <label asp-for="BirimID" class="control-label"></label>
                <select asp-for="BirimID" class="form-control form-control-sm" asp-items="@ViewBag.MalzemeBirimListe" id="MalzemeBirimListe"></select>
                <span asp-validation-for="BirimID" class="text-danger"></span>
            </div>

        </div>

        <input asp-for="Fiyat" type="hidden" />
        
        <input asp-for="Indirim" type="hidden" />
        <input asp-for="DovizTur" type="hidden" />









        <div class="form-group row">
            <div class="col-lg-12">
                <label asp-for="Aciklama" class="control-label"></label>
                <textarea asp-for="Aciklama" type="text" class="form-control form-control-sm" rows="4" required></textarea>
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>
        </div>
     </div>
 </div>


 
<script src="js/select2.js?v=7.0.5"></script>

 
