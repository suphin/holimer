            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="tab-content">
            <div class="tab-pane fade show active" id="kt_tab_pane_5_1" role="tabpanel" aria-labelledby="kt_tab_pane_5_1">
                @if (Model is IEnumerable<object> list)
                {
                    <table class="table">
                        <thead>
                            <tr>
                                @foreach (var property in list.First().GetType().GetProperties())
                                {
                                    <th>@property.Name</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in list)
                            {
                                <tr>
                                    @foreach (var property in item.GetType().GetProperties())
                                    {
                                        <td>@property.GetValue(item)</td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else if (Model != null)
                {
                    
                        <table class="table table-hover">
                            @foreach (var property in Model.GetType().GetProperties())
                            {

                                bool isCollection = typeof(System.Collections.IEnumerable).IsAssignableFrom(property.PropertyType)
                                && property.PropertyType != typeof(string);

                                // Burada property adının, dışladığımız listedeki herhangi bir isim olup olmadığını kontrol ediyoruz.
                            if (!excludedProperties.Contains(property.Name) && !property.Name.Contains("ID") && !isCollection)
                                {
                                    <tr>
                                        <td>@property.Name:</td>
                                        <td>@property.GetValue(Model)</td>
                                    </tr>
                                }

                            }
                        </table>
                    
                }
                else
                {
                    <p>Veri bulunamadı.</p>
                }
            </div>
            <div class="tab-pane fade" id="kt_tab_pane_5_2" role="tabpanel" aria-labelledby="kt_tab_pane_5_2">
                @{
                    @await Component.InvokeAsync("DosyaYonetimi",
                         new { VeriID = Model.ID, ModulID = ViewBag.ModulID, DosyaYolu = ViewBag.DosyaYolu })
                }
            </div>
          
        </div>
    </div>
</div>

