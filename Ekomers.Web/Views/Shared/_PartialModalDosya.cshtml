@model AuthorizeCrudVM
<div id="ModalDosyaEkle" class="modal fade" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
	<div class="modal-dialog modal-xl">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Dosya Ekle</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Kapat">

					<i aria-hidden="true" class="ki ki-close"></i>
				</button>
			</div>
			<div class="modal-body" id="DetaylarDosya">
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-danger" data-dismiss="modal">Kapat</button>
			</div>

		</div>

	</div>
</div>
<div class="modal fade" id="pdfModal" tabindex="-1" role="dialog" aria-labelledby="pdfModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
	<div class="modal-dialog" role="document" style="max-width: 80%;">
		<div class="modal-content" style="height: 90vh;">
			<div class="modal-header">
				<h5 class="modal-title" id="pdfModalLabel">Dosya Görüntüleyici</h5>
				<button type="button" class="btn btn-danger" data-dismiss="modal" aria-label="Close">
					Kapat
				</button>
			</div>
			<div class="modal-body" style="height: calc(100% - 56px);overflow: hidden; position: relative;">
			 
				<div id="toolbar" style="display: none; text-align: center; margin-bottom: 10px; z-index: 2; position: absolute; top: 10px; left: 50%; transform: translateX(-50%);">
					<button id="zoomIn" class="btn btn-primary">Yakınlaştır</button>
					<button id="zoomOut" class="btn btn-primary">Uzaklaştır</button>
					<a id="downloadImage" class="btn btn-primary" download>İndir</a>
				</div>

				<iframe id="pdfFrame" width="100%" height="100%" style="display: none;"></iframe>
				<video id="videoFrame" style="display:none; width:100%; max-height:100%;" controls></video>
				<div style="display: flex; justify-content: center; align-items: center; height: 100%;">
					<img id="imageFrame" style="display: none; object-fit: contain; max-width: 100%; max-height: 100%; transform-origin: center center;" />
				</div>
			</div>
		</div>
	</div>
</div>
  
 


@if(Model.HaritaEkle)
{
	await Html.RenderPartialAsync("_PartialMap");
}