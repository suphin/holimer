    @{
        var Aylar = "'Ocak','Şubat','Mart','Nisan','Mayıs','Haziran','Temmuz','Ağustos','Eylül','Ekim','Kasım','Aralık'";
        var AktiviteSayisi = "";
		var SiparisSayisi = "";
		var SiparisToplami = "";
        foreach (var item in Model.AylikAktiviteSayisi)
        {
			AktiviteSayisi = AktiviteSayisi+item.ToString() + ",";
        }
		foreach (var item in Model.AylikSiparisSayisi)
		{
			SiparisSayisi = SiparisSayisi + item.ToString() + ",";
		}
		foreach (var item in Model.AylikSiparisToplam)
		{
			SiparisToplami = SiparisToplami + Math.Round(item,0).ToString() + ",";
		}
    } 
    <script>
	

	// Shared Colors Definition
	const primary = '#6993FF';
	const success = '#1BC5BD';
	const info = '#8950FC';
	const warning = '#FFA800';
	const danger = '#F64E60';

	// Class definition
 

 

	var KTApexChartsDemo = function () {
		// Private functions
		

		var _demo3 = function () {
			const apexChart = "#chart_3";
			var options = {
				series: [{
					name: 'Aktivite Sayıları',
					data: [@AktiviteSayisi]
						},
						{
					name: 'Sipariş Sayıları',
					data: [@SiparisSayisi]
				}],
				chart: {
					type: 'bar',
					height: 350
				},
				plotOptions: {
					bar: {
						horizontal: false,
						columnWidth: '55%',
						endingShape: 'rounded'
					},
				},
				dataLabels: {
					enabled: false
				},
				stroke: {
					show: true,
					width: 2,
					colors: ['transparent']
				},
				xaxis: {
					categories: [@Html.Raw(Aylar)],
				},
				yaxis: {
					title: {
						text: ' '
					}
				},
				fill: {
					opacity: 1
				},
				tooltip: {
					y: {
						formatter: function (val) {
							return "  " + val + "  "
						}
					}
				},
				colors: [primary, success, warning]
			};

			var chart = new ApexCharts(document.querySelector(apexChart), options);
			chart.render();
		}


		var _demo5 = function () {
		const apexChart = "#chart_5";
		var options = {
			series: [{
				name: 'Aktivite',
				type: 'column',
				data: [@AktiviteSayisi]
			}, {
				name: 'Sipariş',
				type: 'column',
				data: [@SiparisSayisi]
			}, {
				name: 'Gelir',
				type: 'line',
				data: [@SiparisToplami]
			}],
			chart: {
				height: 350,
				type: 'line',
				stacked: false
			},
			dataLabels: {
				enabled: false
			},
			stroke: {
				width: [1, 1, 4]
			},
			title: {
				text: 'Aktivite-Sipariş Sayıları üzerinen Gelir Analizi',
				align: 'left',
				offsetX: 110
			},
			xaxis: {
				categories: [@Html.Raw(Aylar)],
			},
			yaxis: [
				{
					axisTicks: {
						show: true,
					},
					axisBorder: {
						show: true,
						color: primary
					},
					labels: {
						style: {
							colors: primary,
						}
					},
					title: {
						text: "Aktivite Sayısı",
						style: {
							color: primary,
						}
					},
					tooltip: {
						enabled: true
					}
				},
				{
					seriesName: 'Aktivite',
					opposite: true,
					axisTicks: {
						show: true,
					},
					axisBorder: {
						show: true,
						color: success
					},
					labels: {
						style: {
							colors: success,
						}
					},
					title: {
						text: "Sipariş Sayıları",
						style: {
							color: success,
						}
					},
				},
				{
					seriesName: 'Gelir',
					opposite: true,
					axisTicks: {
						show: true,
					},
					axisBorder: {
						show: true,
						color: warning
					},
					labels: {
						style: {
							colors: warning,
						},
					},
					title: {
						text: "Gelir TL",
						style: {
							color: warning,
						}
					}
				},
			],
			tooltip: {
				fixed: {
					enabled: true,
					position: 'topLeft', // topRight, topLeft, bottomRight, bottomLeft
					offsetY: 30,
					offsetX: 60
				},
			},
			legend: {
				horizontalAlign: 'left',
				offsetX: 40
			}
		};

		var chart = new ApexCharts(document.querySelector(apexChart), options);
		chart.render();
	}

	return {
			// public functions
			init: function () {
				 
				_demo3();
				_demo5();
			 
			}
		};
	}();

	jQuery(document).ready(function () {
		KTApexChartsDemo.init();
	});
    </script>

   
