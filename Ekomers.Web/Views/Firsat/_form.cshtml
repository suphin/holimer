@model FirsatVM


@if (Model.ID != 0 && Model.IsLocked==false)
{
    <a href="/Teklif/FirsattanTeklife?FirsatID=@Model.ID" class="btn btn-sm btn-primary font-weight-bold mb-2">Teklife Çevir</a>

}


<div class="form-group row">
    <div class="col-lg-6">
        <label asp-for="DurumAd" class="control-label"></label>
        @if (Model.IsLocked)
        {  
            <input asp-for="DurumAd" class="form-control form-control-sm" readonly/>
            <input asp-for="DurumID" type="hidden" />
        }
        else
        {
             <select asp-for="DurumID" class="kt_select2" data-live-search="true" data-size="5" asp-items="@ViewBag.FirsatDurumListe"></select>
        }
       
        <span asp-validation-for="DurumAd" class="text-danger"></span>
    </div>
    <div class="col-lg-6">
        <label asp-for="SorumluAd" class="control-label"></label>
        <select asp-for="SorumluID" class="kt_select2" data-live-search="true" data-size="5" asp-items="@ViewBag.SorumluListe"></select>
        <span asp-validation-for="SorumluAd" class="text-danger"></span>
    </div>
  
</div>
<div class="form-group row">
    <div class="col-lg-12">
    @{
            await Html.RenderPartialAsync("~/Views/Musteriler/_selectList.cshtml", Model?.Musteri ?? new Musteriler());
    }
    </div>

